{
  "settings": {
    "index.number_of_shards": 3,
    "index.max_result_window": 300000,
    "analysis": {
      "analyzer": {
        "autocomplete_analyzer": {
          "filter": ["lowercase", "edge_ngram"],
          "tokenizer": "standard"
        },
        "autocomplete_prefix": {
          "filter": ["lowercase", "edge_ngram"],
          "tokenizer": "keyword"
        },
        "lowercase_keyword": {
          "filter": ["lowercase"],
          "tokenizer": "keyword"
        }
      },
      "filter": {
        "edge_ngram": {
          "max_gram": 20,
          "min_gram": 2,
          "side": "front",
          "type": "edge_ngram"
        }
      }
    }
  },
  "mappings": {
    "dynamic": "false",
    "date_detection": false,
    "properties": {
        "analysis_autocomplete": {
            "type": "keyword",
            "fields": {
                "analyzed": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "lowercase_keyword"
                },
                "lowercase": {
                    "type": "text",
                    "analyzer": "lowercase_keyword"
                },
                "prefix": {
                    "type": "text",
                    "analyzer": "autocomplete_prefix",
                    "search_analyzer": "lowercase_keyword"
                }
            }
        },
        "analysis_id": {
            "type": "keyword",
            "copy_to": [
                "analysis_autocomplete"
            ]
        },
        "analysis_state": {
            "type": "keyword"
        },
        "analysis_type": {
            "type": "keyword"
        },
        "analysis_version": {
            "type": "integer"
        },
        "updated_at": {
          "type": "date"
        },
        "first_published_at": {
          "type": "date"
        },
        "published_at": {
          "type": "date"
        },
        "donors": {
            "type": "nested",
            "properties": {
                "donor_id": {
                    "type": "keyword",
                    "copy_to": [
                        "analysis_autocomplete"
                    ]
                },
                "gender": {
                    "type": "keyword"
                },
                "specimens": {
                    "type": "nested",
                    "properties": {
                        "samples": {
                            "type": "nested",
                            "properties": {
                                "matched_normal_submitter_sample_id": {
                                    "type": "keyword",
                                    "copy_to": [
                                        "analysis_autocomplete"
                                    ]
                                },
                                "sample_id": {
                                    "type": "keyword",
                                    "copy_to": [
                                        "analysis_autocomplete"
                                    ]
                                },
                                "sample_type": {
                                    "type": "keyword"
                                },
                                "submitter_sample_id": {
                                    "type": "keyword",
                                    "copy_to": [
                                        "analysis_autocomplete"
                                    ]
                                }
                            }
                        },
                        "specimen_id": {
                            "type": "keyword",
                            "copy_to": [
                                "analysis_autocomplete"
                            ]
                        },
                        "specimen_tissue_source": {
                            "type": "keyword"
                        },
                        "specimen_type": {
                            "type": "keyword"
                        },
                        "submitter_specimen_id": {
                            "type": "keyword",
                            "copy_to": [
                                "analysis_autocomplete"
                            ]
                        },
                        "tumour_normal_designation": {
                            "type": "keyword"
                        }
                    }
                },
                "submitter_donor_id": {
                    "type": "keyword",
                    "copy_to": [
                        "analysis_autocomplete"
                    ]
                }
            }
        },
        "experiment": {
            "properties": {
                "experimental_strategy": {
                    "type": "keyword"
                },
                "platform": {
                    "type": "keyword"
                }
            }
        },
        "files": {
            "type": "nested",
            "properties": {
                "analysis_tools": {
                    "type": "keyword",
                    "copy_to": [
                        "analysis_autocomplete"
                    ]
                },
                "data_category": {
                    "type": "keyword",
                    "copy_to": [
                        "analysis_autocomplete"
                    ]
                },
                "data_type": {
                    "type": "keyword",
                    "copy_to": [
                        "analysis_autocomplete"
                    ]
                },
                "file_access": {
                    "type": "keyword"
                },
                "file_type": {
                    "type": "keyword"
                },
                "md5sum": {
                    "type": "keyword"
                },
                "name": {
                    "type": "keyword"
                },
                "object_id": {
                    "type": "keyword",
                    "copy_to": [
                        "analysis_autocomplete"
                    ]
                },
                "size": {
                    "type": "long"
                }
            }
        },
        "repositories": {
            "type": "nested",
            "properties": {
                "code": {
                    "type": "keyword"
                },
                "country": {
                    "type": "keyword"
                },
                "name": {
                    "type": "keyword"
                },
                "organization": {
                    "type": "keyword"
                },
                "url": {
                    "type": "keyword"
                }
            }
        },
        "study_id": {
            "type": "keyword",
            "copy_to": [
                "analysis_autocomplete"
            ]
        },
        "workflow": {
            "properties": {
                "run_id": {
                    "type": "keyword"
                },
                "workflow_name": {
                    "type": "keyword"
                },
                "workflow_version": {
                    "type": "keyword"
                }
            }
        }
    }
}
}
