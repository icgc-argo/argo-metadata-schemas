{
  "name": "variant_calling_supplement",
  "schema": {
    "type": "object",
    "required": [
      "workflow",
      "experiment",
      "variant_class"
    ],
    "properties": {
      "workflow": {
        "propertyNames": {
          "enum": [
            "workflow_name",
            "workflow_short_name",
            "workflow_version",
            "genome_build",
            "run_id",
            "session_id",
            "inputs",
            "pipeline_info"
          ]
        },
        "required": [
          "workflow_name",
          "workflow_short_name",
          "workflow_version",
          "genome_build",
          "run_id"
        ],
        "type": "object",
        "properties": {
          "workflow_name": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9 _\\-]+[a-zA-Z0-9]+$"
          },
          "workflow_short_name": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_\\-]+[a-zA-Z0-9]+$"
          },
          "genome_build": {
            "type": "string",
            "enum": [
              "GRCh38_hla_decoy_ebv",
              "GRCh38_Verily_v1",
              "GRCh38",
              "GRCh37"
            ]
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "tumour_analysis_id": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                },
                "normal_analysis_id": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                },
                "analysis_type": {
                  "type": "string",
                  "const": "sequencing_alignment"
                }
              }
            },
            "minItems": 1,
            "maxItems": 2
          },
          "run_id": {
            "type": "string"
          },
          "pipeline_info": {
            "type": "object"
          },
          "session_id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
          },
          "workflow_version": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "experiment": {
        "type": "object",
        "propertyNames": {
          "enum": [
            "platform",
            "experimental_strategy",
            "submitter_sequencing_experiment_id",
            "target_capture_kit",
            "primary_target_regions",
            "capture_target_regions",
            "coverage"
          ]
        },
        "required": [
          "platform",
          "experimental_strategy"
        ],
        "properties": {
          "submitter_sequencing_experiment_id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9\\-\\._]{1,98}$"
          },
          "target_capture_kit": {
            "type": [
              "string",
              "null"
            ]
          },
          "primary_target_regions": {
            "type": [
              "string",
              "null"
            ]
          },
          "capture_target_regions": {
            "type": [
              "string",
              "null"
            ]
          },
          "coverage": {
            "anyOf": [
              {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "Hotspot Regions",
                    "Coding Exons",
                    "Introns",
                    "Promoters",
                    "3 Prime UTR",
                    "5 Prime UTR",
                    "ncRNA"
                  ]
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "platform": {
            "enum": [
              "CAPILLARY",
              "LS454",
              "ILLUMINA",
              "SOLID",
              "HELICOS",
              "IONTORRENT",
              "ONT",
              "PACBIO",
              "Nanopore",
              "BGI"
            ]
          },
          "experimental_strategy": {
            "type": "string",
            "enum": [
              "WGS",
              "WXS",
              "RNA-Seq",
              "Bisulfite-Seq",
              "ChIP-Seq",
              "Targeted-Seq"
            ]
          }
        }
      },
      "variant_class": {
        "type": "string",
        "enum": [
          "Germline",
          "Somatic",
          "Germline,Somatic"
        ]
      }
    }
  }
}
