{
  "aliases": {
    "analysis_centric": {}
  },
  "settings": {
    "index.number_of_shards": 3,
    "index.max_result_window": 300000,
    "analysis": {
      "analyzer": {
        "autocomplete_analyzer": {
          "filter": ["lowercase", "edge_ngram"],
          "tokenizer": "standard"
        },
        "autocomplete_prefix": {
          "filter": ["lowercase", "edge_ngram"],
          "tokenizer": "keyword"
        },
        "lowercase_keyword": {
          "filter": ["lowercase"],
          "tokenizer": "keyword"
        }
      },
      "filter": {
        "edge_ngram": {
          "max_gram": 20,
          "min_gram": 2,
          "side": "front",
          "type": "edge_ngram"
        }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "date_detection": false,
    "properties": {
      "analysis_autocomplete": {
        "fields": {
          "analyzed": {
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "lowercase_keyword",
            "type": "text"
          },
          "lowercase": {
            "analyzer": "lowercase_keyword",
            "type": "text"
          },
          "prefix": {
            "analyzer": "autocomplete_prefix",
            "search_analyzer": "lowercase_keyword",
            "type": "text"
          }
        },
        "type": "keyword"
      },
      "analysis_id": {
        "type": "keyword",
        "copy_to": ["analysis_autocomplete"]
      },
      "analysis_type": {
        "type": "keyword"
      },
      "analysis_version": {
        "type": "integer"
      },
      "analysis_state": {
        "type": "keyword"
      },
      "workflow": {
        "properties": {
          "workflow_name": {
            "type": "keyword"
          },
          "workflow_version": {
            "type": "keyword"
          }
        }
      },
      "experiment": {
        "type": "object",
        "properties": {
          "platform": {
            "type": "keyword"
          },
          "experimental_strategy": {
            "type": "keyword"
          }
        }
      },
      "study_id": {
        "type": "keyword",
        "copy_to": ["analysis_autocomplete"]
      },
      "variant_class": {
        "type": "keyword"
      },
      "files": {
        "type": "nested",
        "properties": {
          "size": {
            "type": "long"
          },
          "md5sum": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "object_id": {
            "type": "keyword",
            "copy_to": ["analysis_autocomplete"]
          },
          "file_type": {
            "type": "keyword"
          },
          "file_access": {
            "type": "keyword"
          },
          "data_type": {
            "type": "keyword",
            "copy_to": ["analysis_autocomplete"]
          }
        }
      },
      "donors": {
        "type": "nested",
        "properties": {
          "donor_id": {
            "type": "keyword",
            "copy_to": ["analysis_autocomplete"]
          },
          "submitter_donor_id": {
            "type": "keyword",
            "copy_to": ["analysis_autocomplete"]
          },
          "gender": {
            "type": "keyword"
          },
          "specimens": {
            "type": "nested",
            "properties": {
              "specimen_id": {
                "type": "keyword",
                "copy_to": ["analysis_autocomplete"]
              },
              "submitter_specimen_id": {
                "type": "keyword",
                "copy_to": ["analysis_autocomplete"]
              },
              "tumour_normal_designation": {
                "type": "keyword"
              },
              "specimen_tissue_source": {
                "type": "keyword"
              },
              "specimen_type": {
                "type": "keyword"
              },
              "samples": {
                "type": "nested",
                "properties": {
                  "sample_id": {
                    "type": "keyword",
                    "copy_to": ["analysis_autocomplete"]
                  },
                  "submitter_sample_id": {
                    "type": "keyword",
                    "copy_to": ["analysis_autocomplete"]
                  },
                  "sample_type": {
                    "type": "keyword"
                  },
                  "matched_normal_submitter_sample_id": {
                    "type": "keyword",
                    "copy_to": ["analysis_autocomplete"]
                  }
                }
              }
            }
          }
        }
      },
      "repositories": {
        "type": "nested",
        "properties": {
          "code": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "organization": {
            "type": "keyword"
          },
          "country": {
            "type": "keyword"
          },
          "url": {
            "type": "keyword"
          }
        }
      }
    }
  }
}
